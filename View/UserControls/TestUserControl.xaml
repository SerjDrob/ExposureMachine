<UserControl x:Class="ExposureMachine.View.UserControls.TestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExposureMachine.View.UserControls"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel Orientation="Horizontal" Name="myControlLayout">
            <TextBlock Text="{Binding Path=Label}" Width="50" Height="22"/>
            <TextBox Text="{Binding Path=MyText}" Width="100" Height="22"/>
        </StackPanel>
    </Grid>
</UserControl>
